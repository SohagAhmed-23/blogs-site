<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Tailwind via CDN</title>
  <%- include('./partials/head') %>
</head>
<body>
  <%- include('./partials/navbar') %>


<div class="min-h-screen bg-gray-100 p-6 pt-20">
  <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

    <% blogs.forEach(blog => { %>
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden flex flex-col">
        
        <!-- Cover Image -->
        <% if (blog.coverImage) { %>
          <img src="<%= blog.coverImage %>" alt="Cover Image" class="w-full h-48 object-cover">
        <% } else { %>
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-400">
            No Image
          </div>
        <% } %>

        <div class="p-6 flex-1 flex flex-col">
          <!-- Title -->
          <h2 class="text-xl font-bold text-gray-800 mb-2"><%= blog.title %></h2>

          <!-- Content excerpt -->
          <p class="text-gray-600 text-sm mb-4">
            <%= blog.content.length > 150 ? blog.content.substring(0, 150) + "..." : blog.content %>
          </p>

          <!-- Author and date -->
          <div class="mt-auto flex items-center justify-between text-gray-500 text-sm">
            <span>Author: <%= blog.authorName %></span>
            <span><%= new Date(blog.createdAt).toLocaleDateString() %></span>
          </div>

          <!-- Optional: Read More button -->
          <a href="/blogs/<%= blog._id %>" class="mt-4 inline-block text-indigo-600 font-semibold hover:underline">
            Read More
          </a>
        </div>
      </div>
    <% }) %>

  </div>
</div>

 
</body>
</html>
